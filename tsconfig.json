{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, // สำคัญ: ยอมให้มีไฟล์ .js ผสมได้
    "skipLibCheck": true,
    "strict": true, // แนะนำ: ตั้งเป็น false ก่อนในช่วงเริ่มเปลี่ยน จะได้ไม่เครียดกับ Error ยิบย่อย
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "types/next-env.d.ts",
    "declarations.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src/app/next-auth.d.ts",
    "src/app/api/auth/[...nextauth]/route.ts"
, "src/scripts/Holiday.ts", "src/lib/auth-config.js", "src/utils/ratelimit.ts", "src/app/page.tsx", "src/app/login/page.js"  ],
  "exclude": [
    "node_modules"
  ],
  // ส่วนสำคัญสำหรับ Custom Server (server.ts)
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs" // บังคับให้ server รันแบบ CommonJS (Node ปกติ)
    }
  }
}
